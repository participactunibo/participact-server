<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate
			expression="recoverPasswordController.getRecoverPassword(externalContext)"
			result="flowScope.recoverPassword" />
		<evaluate expression="recoverPasswordController.initResetPasswordForm()"
			result="flowScope.resetPasswordForm" />
	</on-start>

	<decision-state id="checkRecover">
		<if test="flowScope.recoverPassword == null" then="errorRecover"
			else="choosePassword" />
	</decision-state>

	<view-state id="errorRecover" view="/resetpassword/resetpassworderror">
	</view-state>

	<view-state id="choosePassword" view="/resetpassword/resetpassword"
		model="resetPasswordForm">
		<transition on="change" to="success">
			<evaluate
				expression="recoverPasswordController.setPassword(flowScope.recoverPassword, flowScope.resetPasswordForm)"></evaluate>
		</transition>
		<transition on="cancel" to="end" />
	</view-state>

	<view-state id="success" view="/resetpassword/resetpasswordcompleted">
		<transition on="next" to="end" />
	</view-state>

	<end-state id="end" view="redirect:/" />
</flow>